<a href="{{ path('admin.post.new') }}" class="btn btn-warning my-3">
    <i class="fas fa-plus-square"></i> Rédiger un article
</a>

<table class="table table-hover table-sm">
    <thead>
    <tr>
        <th scope="col">Créé le</th>
        <th scope="col">Titre</th>
        <th scope="col">Auteur</th>
        <th scope="col">Image</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.createdAt|date('d/m/Y H:i', 'Europe/Paris') }}</td>
            <td>{{ post.title|slice(0,160) }}</td>
            <td>{{ post.user.fullname }}</td>
            <td><img src="{{ asset_post_image(post.image) }}" alt="" width="150" height="150"></td>
            <td>
                <a href="{{ path('admin.post.edit', {'id':post.id}) }}" class="post-edit mr-3"><i class="fas fa-edit"></i></a>
                <a href="#" class="post-remove"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>