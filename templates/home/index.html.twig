{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil {% endblock %}

{% block stylesheets %}
    {{ parent() }}

      <!-- CSS personnelles spécifiques a la page d'accueil -->
    <link href="{{ asset('css/home.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
<div class="jumbotron">
  <h1 class="display-4">Blog réalisé avec Symfony</h1>
  <p class="lead">Ce blog est réalisé a l'aide du framework symfony</p>
</div>

<div class='container'>
    {% for post in posts %}
    <div class="card" style="width:700px;">
    <img src={{post.image}}  class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <span class="badge badge-secondary">{{ post.category.name }}</span>
        <p class="card-text">{{post.content|slice(0,150)}}</p>
        <div class="card-footer"> créé le {{post.createdAt|date("d/m/Y") }} par {{ post.user.fullname }} </div>
        <a href="{{ path('post.index', {'slug':post.slug}) }}" class="btn btn-secondary">Lire la suite</a>
    </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
