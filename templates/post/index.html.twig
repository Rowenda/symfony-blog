{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Article {% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block body %}
<div class="jumbotron">
  <h1 class="display-4">Blog réalisé avec Symfony</h1>
  <p class="lead">Ce blog est réalisé a l'aide du framework symfony</p>
</div>

<div class='container'>
    <div class="card" style="width:700px;">
     <!-- Preview Image -->
    <img src={{post.image}}  class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
         <!-- Category -->
    <span class="badge badge-secondary">{{ post.category.name }}</span>
    <!-- Post Content -->
        <p class="card-text">{{post.content}}</p>
        <!-- Author and date -->
        <div class="card-footer"> créé le {{post.createdAt|date("d/m/Y") }} par {{post.author}} </div>
    </div>
    </div>
    {% for comment in post.comments %}
        
        <div>
        <div>{{comment.user}} le {{comment.createdAt|date("d/m/Y")}}</div>
        <div>{{comment.content}}</div>
        </div>

    {% endfor %}
</div>

{% endblock %}
